<UserControl x:Class="Bootstrapper.UI.Views.FeaturesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Bootstrapper.UI.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid Margin="10px">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0">
            <Label FontSize="24px" Padding="16px" Content="Features" />
            <TextBlock FontSize="14px" TextWrapping="Wrap" Text="This is where the list of optional features can be selected for installation or uninstallation." />
        </StackPanel>

        <CheckBox Grid.Row="1" VerticalAlignment="Center" Content="Feature 1" FontSize="18px" IsChecked="{Binding InstallFeature1}" VerticalContentAlignment="Center" />
    </Grid>
</UserControl>